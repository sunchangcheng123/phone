ment\";\n      this.$http.post(url, {\n        nid: nid,\n        msg: pmsg\n      }).then(function (result) {\n        //console.log(result);\n        //5.获取服务器程序返回\n        //6.提示用户 \"评论成功\"\n        Toast(\"发表成功\");\n        _this2.pageIndex = 0;\n        _this2.list = [];\n\n        _this2.getMore();\n      });\n    }\n  },\n  created: function created() {\n    this.getMore();\n  },\n  props: [\"id\"]\n};",{"version":3,"sources":["comment.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;AAoBA;AACA,SAAA,KAAA,QAAA,SAAA;AACA,eAAA;AACA,MADA,kBACA;AACA,WAAA;AACA,WAAA,EADA;AACA;AACA,iBAAA,CAFA;AAGA,gBAAA,CAHA;AAIA,YAAA;AAJA,KAAA;AAMA,GARA;AASA,WAAA;AACA,WADA,qBACA;AAAA;;AACA,WAAA,SAAA;AACA,UAAA,IAAA,KAAA,SAAA;AACA,UAAA,IAAA,KAAA,QAAA;AACA,UAAA,KAAA,KAAA,EAAA;AACA,UAAA,MAAA,YAAA,CALA,CAMA;;AACA,UAAA,MAAA,mBAAA,EAAA,GAAA,OAAA,GAAA,CAAA,GAAA,YAAA,GAAA,CAAA;AACA,WAAA,KAAA,CAAA,GAAA,CAAA,GAAA,EAAA,IAAA,CAAA,kBAAA;AACA,cAAA,IAAA,GAAA,MAAA,IAAA,CAAA,MAAA,CAAA,OAAA,IAAA,CAAA,IAAA,CAAA,CADA,CAEA;AACA,OAHA;AAIA,KAbA;AAcA,eAdA,yBAcA;AAAA;;AACA;AACA,UAAA,MAAA,KAAA,EAAA,CAFA,CAGA;;AACA,UAAA,OAAA,KAAA,GAAA,CAJA,CAKA;;AACA,UAAA,KAAA,IAAA,GAAA,MAAA,IAAA,CAAA,EAAA;AACA,cAAA,WAAA;AACA;AACA,OATA,CAUA;;;AACA,UAAA,MAAA,mCAAA;AACA,WAAA,KAAA,CAAA,IAAA,CAAA,GAAA,EAAA;AAAA,aAAA,GAAA;AAAA,aAAA;AAAA,OAAA,EAAA,IAAA,CAAA,kBAAA;AACA;AACA;AACA;AACA,cAAA,MAAA;AACA,eAAA,SAAA,GAAA,CAAA;AACA,eAAA,IAAA,GAAA,EAAA;;AACA,eAAA,OAAA;AACA,OARA;AASA;AAnCA,GATA;AA8CA,SA9CA,qBA8CA;AACA,SAAA,OAAA;AACA,GAhDA;AAiDA,SAAA,CAAA,IAAA;AAjDA,CAAA","sourcesContent":["<template>\r\n    <div class=\"app-comment\">\r\n        <h1>评论子组件</h1>\r\n        <hr />\r\n        <!--发表评论区域-->\r\n        <textarea placeholder=\"请吐槽最多120个字\" maxlength=\"120\" v-model=\"msg\">\r\n        </textarea>\r\n        <mt-button size=\"large\" @click=\"postComment\">发表评论</mt-button>\r\n        <!--显示评论的区域-->\r\n        <div class=\"cmt-list\">\r\n            <div class=\"cmt-item\" v-for=\"(item,i) in list\" :key=\"item.id\">\r\n                <div class=\"cmt-info\">第{{i+1}}楼 用户:{{item.user_name}}  发表时间:{{item.ctime | datetimeFilter}}</div>\r\n                <div class=\"cmt-body\">{{item.content}}</div>\r\n            </div>\r\n        </div>\r\n        <mt-button size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\n    //单独引入Toast组件\r\n    import {Toast} from \"mint-ui\"\r\n    export default {\r\n        data(){\r\n            return {\r\n               msg:\"\",   //双向绑定用户评论\r\n               pageIndex:0,\r\n               pageSize:5,\r\n               list:[],\r\n            }\r\n        },\r\n        methods:{\r\n            getMore(){\r\n                this.pageIndex++;\r\n                var p=this.pageIndex;\r\n                var s=this.pageSize;\r\n                var id=this.id;\r\n                var url=\"getComment\";\r\n                //console.log(p+\":\"+s+\":\"+id);\r\n                var url=\"getComment?id=\"+id+\"&pno=\"+p+\"&pageSize=\"+s;\r\n                this.$http.get(url).then(result=>{\r\n                    this.list=this.list.concat(result.body.data);\r\n                    //console.log(result.body.data);\r\n                })\r\n            },\r\n            postComment(){\r\n                //1.获取新闻编号\r\n                var nid=this.id;\r\n                //2.获取评论内容\r\n                var pmsg=this.msg;\r\n                //3.判断新闻评论内容不能为空\r\n                if(pmsg.trim().length==0){\r\n                    Toast(\"评论内容不能为空！\")\r\n                    return;\r\n                }\r\n                //4.发送post请求\r\n                var url=\"http://127.0.0.1:3000/postcomment\";\r\n                this.$http.post(url,{nid:nid,msg:pmsg}).then(result=>{\r\n                    //console.log(result);\r\n                    //5.获取服务器程序返回\r\n                    //6.提示用户 \"评论成功\"\r\n                    Toast(\"发表成功\");\r\n                    this.pageIndex = 0;\r\n                    this.list = [];\r\n                    this.getMore();\r\n                });\r\n            }\r\n        },\r\n        created(){\r\n           this.getMore();\r\n        },\r\n        props:[\"id\"]\r\n    }\r\n</script>\r\n\r\n<style>\r\n    .app-comment h1{\r\n        font-size:18px;\r\n    }\r\n    .app-comment textarea{\r\n        font-size:14px;\r\n        height:85px;\r\n        margin:0;\r\n    }\r\n    .app-comment .cmt-list{\r\n        margin:5px 0;\r\n    }\r\n    .app-comment .cmt-list .cmt-info{\r\n        line-height:30px;\r\n        background:#ccc;\r\n    }\r\n    .app-comment .cmt-list .cmt-body{\r\n        line-height:35px;\r\n        text-indent:2em;  \r\n    }\r\n</style>"],"sourceRoot":"src\\components\\sub"}]}